<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/appBackgroundColorDark"
    tools:context="subs.igware.com.rngmaster.RiskFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="224dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="#2f2f2f"
        app:layout_constraintBottom_toTopOf="@+id/fightBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="104dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="43dp"
            android:text="Army Selection"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/p1Armies"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="167dp"
            android:layout_marginStart="47dp"
            android:ems="2"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/p2Armies"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="167dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="103dp"
            android:layout_toStartOf="@+id/textView3"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/p1Armies"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/p2Armies"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/p1Armies"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="50dp"
            android:ems="2"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="103dp"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/p2Armies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"

        android:layout_height="233dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:background="#2f2f2f"
        android:minHeight="233dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fightBtn">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="44dp"
            android:text="Winner:"
            android:textColor="@color/appTextColorDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/riskWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:text="Player 1"
            android:textColor="@color/appTextColorDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/player1TotalPoints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="58dp"
            android:layout_marginStart="65dp"
            android:text="Player 1 points:"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toStartOf="@+id/player1TotalPoints"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/riskWinner"
            android:layout_marginBottom="53dp"
            android:layout_marginEnd="58dp"
            android:layout_marginStart="63dp"
            android:text="Player 2 points:"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/player2TotalPoints"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/player1TotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player2TotalPoints"
            android:layout_alignBottom="@+id/player2TotalPoints"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="128dp"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toTopOf="@+id/player2TotalPoints"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/player2TotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="128dp"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@color/appTextColorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/fightBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constraintLayout"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorAccent"
        android:text="FIGHT!"
        android:textColor="@color/appTextColorDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

</android.support.constraint.ConstraintLayout>
